<section>
    <div class="container">
        {{#if orders}}
        <h3 class="text-center mt-3">Your Orders</h3>
    {{#each orders}}
    <div onmouseover="orderChecking('{{this.status}}','{{this._id}}')" id="{{this._id}}qq" class="border border-5 rounded mt-5 mb-5">
        <div class="container m-3">
            <h6 class="card-text">Date: {{this.date}}</h6>
            <h6 class="card-text">Mobile: {{this.deliveryDetails.mobile}}</h6>
            <h6 class="card-text">Address: {{this.deliveryDetails.address}}</h6>
            <h6 class="card-text">Pincode: {{this.deliveryDetails.pincode}}</h6>
            <h6 class="cart-text">Payment: {{this.paymentMethod}}</h6>
            <h6 class="card-text">Status: {{this.status}}</h6>
            <p id="{{this._id}}r" >Your refund will get after some days</p> <button id="{{this._id}}rb" onclick="gotRefund('{{this._id}}')" class="btn btn-primary" >Yes i got refund</button>
            <a class="btn btn-primary" href="/view-order/{{this._id}}">View_Products</a>
            <button class="btn btn-primary" onclick="cancelOrder('{{this._id}}','{{this.paymentMethod}}')" id="{{this._id}}c" >Cancel Order</button>
            <button class="btn btn-primary" id="{{this._id}}y" onclick="delivered('{{this._id}}')" >You got it</button>
            <h3 class="cart-text float-end me-5">Total: â‚¹{{this.total}}</h6>
        </div>
    </div>
    <script type="text/javascript" >
     oQuickReply.swap({{this._id}}+'qq');
    </script>
    {{/each}}
    {{else}}
<h3 class="text-center mt-3">There is no orders</h3>
{{/if}}
    </div>

</section>